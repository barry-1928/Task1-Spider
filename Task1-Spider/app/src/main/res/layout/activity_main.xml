<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.task1_spider.MainActivity"
    android:orientation="vertical"
    android:background="#A0CFEC"
    android:gravity="center_horizontal">

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Item here"
        android:id="@+id/edittext1"
        android:textAlignment="center"
        android:textColorHint="#006400"
        android:textColor="#006400" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:onClick="add_to_list"
        android:background="#8B0000"
        android:textColor="#ffff00"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Item you want to remove (Start from 0)"
        android:inputType="number"
        android:id="@+id/edittext2"
        android:textColorHint="#006400"
        android:textColor="#006400"
        android:textAlignment="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE"
        android:background="#8B0000"
        android:textColor="#ffff00"
        android:onClick="remove_from_list"
        android:layout_marginBottom="20dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="LIST"
        android:background="#ffff00"
        android:padding="2.5dp"
        android:fontFamily="sans-serif-condensed"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000"/>


    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>



</LinearLayout>